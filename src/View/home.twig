            </section>

            <section id="projects-section">
                    <div class="row">
                        <h5 style="margin: 30px 15px;font-weight: bold;">Find your project</h5>
                    </div>

                    <div class="row">

                        {% for project in projects%}

                            <div class="col-lg-4">
                                <div class="card mb-4 shadow-sm">
                                    <img src="{{ base_url() }}/assets/images/orange@2x.jpg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h6 class="card-title">{{  project['title'] }}</h6>
                                        <p class="card-text" style="font-size: small">{{ project['definition'] }}</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">{{ project['createdAt'] }}</small>
                                            <small class="text-muted">{{ project['places'] }} places left</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
            </section>

            <section id="people-section"> <!-- style="background-color: #b3d7ff #d39e00-->
                <div class="row mb-4">
                    <h5 style="margin: 30px 15px;font-weight: bold;">Find your perfect patner</h5>
                </div>

                <div class="row">
                    {% for profile in profiles %}
                        <div class="col-lg-4">
                            <div class="card mb-4 shadow-sm card-profile">
                                <div class="card-avatar">
                                    <img src="{{ base_url() }}/assets/images/profiles/{{ profile['username'] }}.jpg" class="card-img-top" alt="profileimage">
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title">@{{ profile['username'] }}</h6>
                                    <h6 class="card-title">{{ profile['name'] }} {{ profile['fsurname'] }} {{ profile['lsurname'] }}</h6>
                                    <p class="card-text text-black-50" style="font-size: small"><span class="oi oi-map-marker mr-1"></span>{{ profile['city'] }}, {{ profile['state'] }}, {{ profile['country'] }}</p>



                                    <div class="row-cols-1 mt-4">
                                        <form action="/follow/{{ profile['username'] }}" method="post">
                                            <button class="btn btn-primary" style="width: 100%">Follow</button>
                                        </form>
                                        <!--<form action="/unfollow/{{ profile['username'] }}" method="get">
                                            <button class="btn btn-primary" style="width: 100%">Unfollow</button>
                                        </form>-->
                                    </div>

                                    <div class="row mt-4">
                                        <div class="col-4">
                                            <p class="small font-weight-bold">Projects</p>
                                            <p>{{ profile['projects'] }}</p>
                                        </div>
                                        <div class="col-4">
                                            <p class="small font-weight-bold">Followers</p>
                                            <p>{{ profile['followers'] }}</p>
                                        </div>
                                        <div class="col-4">
                                            <p class="small font-weight-bold">Following</p>
                                            <p>{{ profile['following'] }}</p>
                                        </div>
                                    </div>

                                </div>
