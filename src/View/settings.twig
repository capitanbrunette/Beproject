{% extends "base.twig" %}


{% block title %}BeProject Configuration{% endblock %}


{% block sidebar %}
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <!-- <img src="" style="margin: 5px 10px;"  height="50" class="d-inline-block align-top" alt=""> -->
            <h4>Be Project</h4>
        </a>

        <button style="outline: none" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon oi oi-menu"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" style="color: white; margin: 0 20px;">Messages<span class="oi oi-chat" title="icon key" aria-hidden="true"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://be.test/{{ id }}/notifications" style="color: white; margin: 0 20px;">Notification <span class="oi oi-bell" title="icon key" aria-hidden="true"></span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" style="color: white;" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Hello {{ id }}
                        <img class="profile-image-menu rounded-circle" width="35" height="35" src="{{ base_url() }}/assets/images/profiles/{{ id }}.jpg">
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <a class="dropdown-item" href="http://be.test/profile/{{ id }}">Profile</a>
                        <a class="dropdown-item" href="#">Configuration</a>
                        <a class="dropdown-item" href="http://be.test/logout">Sign Out</a>
                    </div>
                </li>

            </ul>

        </div>
    </nav>

{% endblock %}

{% block content %}

<div class="content">
    <div class="container-fluid">
        <section>

            <div class="row">

                <div class="col-md-3">
                    <div class="settings-tabnav">
                        <ul class="nav nav-tabs" id="settings-tablist" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="info-tab" data-toggle="tab" href="#info" role="tab" aria-controls="home" aria-selected="true">Account information</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="password-tab" data-toggle="tab" href="#password" role="tab" aria-controls="profile" aria-selected="false">Change Password</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="delete-tab" data-toggle="tab" href="#delete" role="tab" aria-controls="profile" aria-selected="false">Delete Account</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-9">
                    <div class="settings-tabbody">
                        <div class="tab-content" id="settings-content">
                            <div class="tab-pane fade show active" id="info" role="tabpanel" aria-labelledby="info-tab">
                                <div class="row settings-title">
                                    <h6 class="text-uppercase">personal information</h6>
                                </div>
                                <div class="row">
                                    <form>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="username">Username</label>
                                                    <input type="email" class="form-control" id="username" placeholder="{{ username }}">
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="email">Email</label>
                                                    <input type="email" class="form-control" id="email" placeholder="{{ email }}">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label for="firstname">First Name</label>
                                                    <input type="email" class="form-control" id="firstname" placeholder="{{ name }}">
                                                </div>
                                            </div>

                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label for="fsurname">Surname</label>
                                                    <input type="email" class="form-control" id="fsurname" placeholder="{{ userId }}">
                                                </div>
                                            </div>

                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label for="exampleFormControlInput1">Last Surname</label>
                                                    <input type="email" class="form-control" id="lsurname" placeholder="{{ id }}">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="neighborhood">Neighborhood</label>
                                                    <input type="email" class="form-control" id="neighborhood" placeholder="Select Neighborhood">
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="city">City</label>
                                                    <input type="email" class="form-control" id="city" placeholder="{{ createdAt }}">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="state">State</label>
                                                    <input type="email" class="form-control" id="state" placeholder="Select State">
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="country">Country</label>
                                                    <input type="email" class="form-control" id="country" placeholder="Select Country">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row justify-content-end">
                                            <div class="col-lg-4">
                                                <button class="btn btn-primary" type="submit">Save Changes</button>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="password" role="tabpanel" aria-labelledby="password-tab">
                                <div class="row settings-title">
                                    <h6 class="text-uppercase">change password</h6>
                                </div>
                                <div class="row">
                                    <form>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label for="firstname">Old Password</label>
                                                    <input type="email" class="form-control" id="firstname" placeholder="Name">
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="username">New Password</label>
                                                    <input type="email" class="form-control" id="username" placeholder="username">
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="email">Repeat Password</label>
                                                    <input type="email" class="form-control" id="email" placeholder="name@example.com">
                                                </div>
                                            </div>
                                        </div>



                                        <div class="row justify-content-end">
                                                <button class="btn btn-primary" type="submit">Save Changes</button>
                                        </div>

                                    </form>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="delete" role="tabpanel" aria-labelledby="delete-tab">
                                <div class="row settings-title">
                                    <h6 class="text-uppercase">Delete Account</h6>
                                </div>
                                <div class="row">
                                    <form>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="username">New Password</label>
                                                    <input type="email" class="form-control" id="username" placeholder="username">
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="email">Repeat Password</label>
                                                    <input type="email" class="form-control" id="email" placeholder="name@example.com">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row justify-content-end">
                                            <button type="button" class="btn btn-danger" onclick="myFunction('http://be.test/delete/{{ id }}');" style="float: right; margin: 5px 10px;">Delete Account</button>
                                        </div>

                                    </form>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </section>

    </div>
</div>


{% endblock %}





{% block footer %}

{% endblock %}


